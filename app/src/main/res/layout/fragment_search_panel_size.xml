<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/search_size_header"
		android:layout_width="wrap_content"
		android:layout_height="48dp"
		android:background="@android:color/white">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="16dp"
			android:text="Size"
			android:textSize="14sp"/>
		<ImageView
			android:id="@+id/size_arrow"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="16dp"
			android:src="@drawable/ic_g_arrow_collapsexxxhdpi"/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/size_options_panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:elevation="-0.1dp"
		android:orientation="vertical"
		android:visibility="gone">
		<RelativeLayout
			android:id="@+id/search_size_anysize"
			style="@style/search_panel_option">
			<CheckBox
				style="@style/search_panel_option_checkbox"
				android:layout_marginLeft="13dp"/>
			<TextView
				style="@style/search_panel_option_text"
				android:text="@string/search_size_anysize"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/search_size_05"
			style="@style/search_panel_option">
			<CheckBox
				style="@style/search_panel_option_checkbox"
				android:layout_marginLeft="13dp"/>
			<TextView
				style="@style/search_panel_option_text"
				android:text="@string/search_size_05"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/search_size_525"
			style="@style/search_panel_option">
			<CheckBox
				style="@style/search_panel_option_checkbox"
				android:layout_marginLeft="13dp"/>
			<TextView
				style="@style/search_panel_option_text"
				android:text="@string/search_size_525"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/search_size_25100"
			style="@style/search_panel_option">
			<CheckBox
				style="@style/search_panel_option_checkbox"
				android:layout_marginLeft="13dp"/>
			<TextView
				style="@style/search_panel_option_text"
				android:text="@string/search_size_25100"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/search_size_1001"
			style="@style/search_panel_option">
			<CheckBox
				style="@style/search_panel_option_checkbox"
				android:layout_marginLeft="13dp"/>
			<TextView
				style="@style/search_panel_option_text"
				android:text="@string/search_size_1001"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
