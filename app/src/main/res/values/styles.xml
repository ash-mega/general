<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>
	<style name="search_panel_option">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:onClick">selectType</item>
	</style>
	<style name="search_panel_option_icon">
		<item name="android:layout_width">24dp</item>
		<item name="android:layout_height">24dp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">16dp</item>
	</style>
	<style name="search_panel_option_text">
		<item name="android:fontFamily">Roboto</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#8A000000</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">72dp</item>
	</style>
</resources>
